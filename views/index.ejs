
    
        <%- include('includes/head.ejs') %>
        <%- include('includes/nav.ejs') %>

        <header class="masthead text-center text-white">
            <div class="masthead-content">
                <div class="container px-5">
                    <h1 class="masthead-heading mb-0">DUYURU SİSTEMİ</h1>
                    <h2 class="masthead-subheading mb-0">DAHA FAZLASI İÇİN TIKLAYINIZ</h2>
                    <a class="btn btn-primary btn-xl rounded-pill mt-5" href="#duyurular">DUYURULAR</a>
                </div>
            </div>
            <div class="bg-circle-1 bg-circle"></div>
            <div class="bg-circle-2 bg-circle"></div>
            <div class="bg-circle-3 bg-circle"></div>
            <div class="bg-circle-4 bg-circle"></div>
        </header>
        <section id="duyurular" style="padding: 10px;"><br>
            <h1 style="text-align: center;">Duyurular</h1>
            <table class="table table-striped table-dark" >
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Duyuru Adı</th>
                    <th scope="col">Gösterim Tarihi</th>
                    <th scope="col">Bitiş Tarihi</th>
                    <th scope="col">İçerik</th>
                    <th scope="col">İşlemler</th>
                  </tr>
                </thead>
                <tbody>
                    <% if(duyurular.length>0) {%>
                        <%  let sayi1=1; %>
                        <% for(let duyuru of duyurular) {%>    
                        <tr>
                            <th scope="row"><%=sayi1 %></th>
                            <td><%=duyuru.duyuru_adi %></td>
                            <td><%=duyuru.duyuru_gosterim %></td>
                            <td><%=duyuru.duyuru_bitim %></td>
                            <td><%=duyuru.duyuru_icerik %></td>
                            
                            <td>
                               
                                
    
                                 <form action="duyuru-sil" method="post" >
                                    
                                    <input type="hidden" name="duyuruId" value='<%=duyuru._id %>'>
                                    <% if(yonetici) {%>
                                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                    <button type="submit" class="btn btn-outline-danger btn-icon" value="1"> 
                                        <i class="ai-trash">Sil</i>
                                    </button>
                                    <% } %>
                                     </form>
                            </td>
                        </tr>
                         <% sayi1++; } %>
                        <% }else { %>
                        <tr>
                            <td colspan="6" style="text-align:center; background-color: rgba(255,0,0,0.2);">Duyuru Yok!</td>
                        </tr>
                
                        <% } %>
                
                </tbody>
              </table></section>
        
        <%- include('includes/foot.ejs') %>